{
    "manifest_version": 3,
    "name": "pomo",
    "version": "1.0.0",
    "description": "A tomato-themed workflow timer that follows the Pomodoro method to partition work and break times.",
    "icons": {
        "16": "icons/16.png",
        "32": "icons/32.png",
        "48": "icons/48.png",
        "64": "icons/64.png",
        "128": "icons/128.png"
    },
    "browser_action": {
        "default_popup": "popup.html"
    },
    "permissions": ["storage", "alarms", "notifications"],
    "background": {
        "scripts": ["js/background.js"],
        "persistent": false
    },
    "minimum_chrome_version": "60"
}